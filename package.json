{
  "name": "mcp-manager",
  "version": "1.1.1",
  "description": "Standalone MCP Server Manager - Centralized process management for MCP servers",
  "type": "module",
  "main": "dist/main/index.js",
  "author": {
    "name": "Artyom Gorlovetskiy",
    "email": "unbywyd@gmail.com",
    "url": "https://unbywyd.com"
  },
  "license": "CC-BY-NC-4.0",
  "scripts": {
    "dev": "npm run build:main && concurrently -k -n main,renderer,electron -c blue,green,yellow \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:main": "tsup --watch",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 dist/main/index.js && cross-env NODE_ENV=development electronmon .",
    "dev:simple": "npm run build:main && concurrently -k \"vite\" \"cross-env NODE_ENV=development electron .\"",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "build:main": "tsup",
    "build:renderer": "vite build",
    "start": "cross-env NODE_ENV=production electron .",
    "preview": "npm run build && npm run start",
    "kill:processes": "powershell -ExecutionPolicy Bypass -File scripts/kill-processes.ps1",
    "prepack": "npm run kill:processes",
    "pack": "electron-builder --dir",
    "predist": "npm run kill:processes",
    "dist": "electron-builder --publish never",
    "predist:win": "npm run kill:processes",
    "dist:win": "electron-builder --win --publish never",
    "predist:mac": "npm run kill:processes",
    "dist:mac": "electron-builder --mac --publish never",
    "predist:linux": "npm run kill:processes",
    "dist:linux": "electron-builder --linux --publish never",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit -p tsconfig.main.json"
  },
  "dependencies": {
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lint": "^6.8.4",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.8",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tiptap/extension-code-block-lowlight": "^3.12.0",
    "@tiptap/extension-placeholder": "^3.12.0",
    "@tiptap/react": "^3.12.0",
    "@tiptap/starter-kit": "^3.12.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "get-port": "^7.0.0",
    "keytar": "^7.9.0",
    "lowlight": "^3.3.0",
    "openai": "^6.10.0",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.4",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electronmon": "^2.0.3",
    "eslint": "^8.56.0",
    "lucide-react": "^0.312.0",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0",
    "zustand": "^4.5.0"
  },
  "build": {
    "appId": "com.tscodex.mcp-manager",
    "productName": "MCP Manager",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/icons",
        "to": "icons"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "MCP-Manager-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.png",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "unbywyd",
      "repo": "tscodex-mcp-manager-app"
    }
  }
}
